.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand(href=root_path) Simple URL Shortener
      .container.nav-collapse
        %ul.nav
          %li= link_to "Home", root_path
          - if user_signed_in?
            %li= link_to 'Bitmarks', user_bitmarks_path
            %li= link_to 'Bundles', '#'
            %li= link_to 'Stats', '#'
        - if user_signed_in?
          %ul.nav.pull-right
            / %li
            /   %a{:href => "#"} Link
            / %li.divider-vertical
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = current_user.email
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#"} Profile
                %li
                  %a{:href => "#"} Another action
                %li.divider
                %li
                  = link_to 'Logout', destroy_user_session_path, :method => :delete
        - else
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => '#'}
                Welcome to ShortenUrl
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Login', new_user_session_path
                %li
                  = link_to 'Sign Up', new_user_registration_path
